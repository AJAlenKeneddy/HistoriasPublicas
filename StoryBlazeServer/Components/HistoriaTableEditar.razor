@using StoryBlazeServer.Models

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Resumen</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Historias == null)
        {
            <tr>
                <td colspan="4">Cargando...</td>
            </tr>
        }
        else if (Historias.Count == 0)
        {
            <tr>
                <td colspan="4">No se encontraron historias.</td>
            </tr>
        }
        else
        {
            @foreach (var historia in Historias)
            {
                <tr>
                    <td>@historia.Titulo</td>
                    <td>@historia.Resumen</td>
                    <td>@historia.Estado</td>
                    <td>
                        <button @onclick="() => EditarHistoria(historia.HistoriaId)" class="btn btn-primary">
                            Editar
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<Historia>? Historias { get; set; }

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void EditarHistoria(int historiaId)
    {
        NavigationManager.NavigateTo($"/historias/editar/{historiaId}");
    }
}
